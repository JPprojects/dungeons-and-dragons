@page
@{
}
<h1>Add NPC</h1>

<form action="Create" method="post">
    <input type="text" name="characterName" required="" autofocus="" placeholder="Character name" />
    <br />
    <br />
    <select id="species-form" name="speciesId" onchange="changePreview(this)">
        @foreach (var species in ViewBag.Species)
        {
            <option value="@species.id">@species.species_type</option>
        }
    </select>
    <br />
    <br />
    <input type="hidden" name="gameId" value="@ViewBag.GameID" />
    <input type="submit" value="Generate Character" />
</form>
<img id="preview" class="preview" src="@ViewBag.Species[0].image_path" style="height: 150px; width: 100px;" />