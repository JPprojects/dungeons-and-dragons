@section Scripts{
    <script src="~/js/characterPreview.js"></script>
}

<h1>New Playable Character Form</h1>
<form action="Create" method="post">
    <input type="text" name="characterName" required="" autofocus="" placeholder="Character name" />
    <br />
    <br />
    <select id="species-form" name="speciesId" onchange="changePreview(this)">
        @foreach (var species in ViewBag.Species)
        {
            <option value="@species.id">@species.species_type</option>
        }
    </select>
    <br />
    <br />
    <input type="hidden" name="gameUserId" value="@ViewBag.GamesUsersID" />
    <input type="submit" value="Generate Character" />
</form>

<div id="character-preview">
    <img id="character-image" class="preview" src="@ViewBag.Species[0].image_path" style="height: 150px; width: 100px;" />
    <p>HP <span id="character-hp">@ViewBag.Species[0].base_hp</span></p>
    <p>Attack: <span id="character-attack">@ViewBag.Species[0].base_attack</span></p>
</div>

<div id="json-species" style="display:none;">@ViewBag.jsonSpecies</div>