@{
    ViewData["Title"] = "Create Game";
}
<div class="text-center">
    <h1>Create Game</h1>

    <hr />

    <form action="create" method="post">
        <div class="pt-2 pb-1">
            <input type="text" name="gameName" required="" autofocus="" placeholder="Game Name" class="form-control form-input" />
            <input type="hidden" name="signedInUserId" value="@ViewBag.UserID" />
        </div>
        <div class="pt-2 pb-1">
            <button type="submit" class="btn btn-outline-info form-submit">Create Game</button>
        </div>
    </form>
</div>